/**index.wxss**/

.imgto {
  width: 100%;
  height: 300rpx;
}

.tito {
  margin: 20rpx 0rpx 10rpx 20rpx;
  font-size: 37rpx;
}

.swiper swiper-item image {
  width: 100%;
}

.list {
  height: 100%;
}

.list .item {
  display: flex;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.list .item .poster {
  width: 320rpx;
  height: 155rpx;
  margin-right: 40rpx;
}

.list .item .meta {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .item .meta .title, .list .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}

.list .item .meta .title {
  font-size: 32rpx;
  margin-left: 50rpx
}

.list .item .meta .sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}

.list .item .meta .artists {
  font-size: 24rpx;
  color: #999;
  display: block;
  line-height: 32rpx;
}

.list .item .meta .collect-count {
  color: #bce6f9;
  font-size: 24rpx;
  margin-left: 50rpx
}

.imgft {
  width: 100%;
  height: 250rpx;
}

.cotent2 {
  height: 180rpx;
  width: 100%;
  margin-top: 30rpx;
}

.cotent2 .quan {
  float: left;
  width: 25%;
  text-align: center;
}

.cotent2 .quan text {
  color: #c0c0c0;
  font-size: 35rpx;
}

.cotent2 .quan .quan_zi {
  width: 100rpx;
  height: 100rpx;
  margin: auto;
  border-radius: 100%;
  border: 2px solid dodgerblue;
  color: dodgerblue;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.cotent2 .quan .quan_zi .zi{
  text-align: center;
  line-height: 96rpx;
  color: dodgerblue;
  font-size: 45rpx;
}
.cotent2 .quan:nth-child(2) .quan_zi .zi{
  color: green;
}
.cotent2 .quan:nth-child(2) .quan_zi {
  color: green;
  border: 2px solid green;
}
.cotent2 .quan:nth-child(3) .quan_zi .zi{
  color: orange;
}
.cotent2 .quan:nth-child(3) .quan_zi {
  color: orange;
  border: 2px solid orange;
}

.recruit {
  height:100rpx; 
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 10rpx solid #efeff4;
  border-bottom: 15rpx solid #efeff4;
}
.recruit .left{
  margin-left: 15rpx;
  color: red;
  line-height: 100rpx;
}

.recruit swiper-item text{
font-size: 30rpx;
line-height: 100rpx;
}


.foot{
  background-color: #efeff4;
  width: 100%;
  padding: 20rpx;
 
}
.foot text{
  color: #999;
  font-size: 30rpx;
  margin-bottom: 5rpx;
   display: flex;
  justify-content: center;
}